<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gitwaveview.MainActivity">

    <Button
        android:id="@+id/id_bt_start_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始动画" 
        android:layout_gravity="center"
        />
    
  <com.example.gitwaveview.WaveView
      wave:mode="triangle"
      android:color="#6337B5"
      wave:waveWidth="10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone">
   
      </com.example.gitwaveview.WaveView>
      
  <com.example.gitwaveview.WaveView
      wave:mode="circle"
      android:color="#6337B5"
      wave:waveWidth="10"
      wave:waveCount="20"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" 
      android:visibility="gone"/>
  
  <com.example.gitwaveview.BubbleWindow 
      android:layout_width="match_parent"
      android:layout_height="match_parent"
        android:visibility="gone"/>
  
  <com.example.gitwaveview.ErrorView 
      android:id="@+id/id_error_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />
  
</LinearLayout>
